<div class="PostsList" style="max-width: 90%;margin-inline: auto;">

  {% for post in collections[tag] | sortByDate %}
  <a href="{{ post.url }}">
  <div class="PostBit">
    <img src="{{ post.data.pageimg | default('/assets/img/blank.png') }}">

    <div class="PostInfo">
      <h3>{{ post.data.title }}</h3>
      <span><i class="fa-solid fa-user"></i>{{ post.data.author }}</span><br>
      <span><i class="fa-solid fa-clock"></i>{{ post.data.date | formatDate }}</span>
      <p>{{ post.data.summary }}</p>

    </div>

  </div>
</a>
  {% endfor %}
</div>

