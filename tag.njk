---
pagination:
  data: collections
  size: 1
  alias: tag
  addAllPagesToCollections: true
layout: layout/mainBlank.njk
permalink: /articles/tags/{{ tag | slugify }}/index.html
eleventyComputed:
  title: Posts Tagged with "{{ tag }}"
---

<link rel="stylesheet" href="/assets/css/article_parktags.css" />
<link rel="stylesheet" href="/assets/css/article.css" />

<h1 style=" width: fit-content; margin-inline: auto;"">Articles Tagged With {{ tag }}</h1>

